<layout id="WatchFace">
    <drawable class="Background" />

    <drawable id="left" class="Twelve">
        <param name="x">100</param>
        <param name="y">130</param>
        <param name="type">:hour</param>
    </drawable>

    <drawable id="right" class="Twelve">
        <param name="x">160</param>
        <param name="y">130</param>
        <param name="type">:minute</param>
    </drawable>

    <drawable id="dayOfWeek" class="DayOfWeek">
        <param name="x">124</param>
        <param name="y">200</param>
    </drawable>
    <drawable id="dayOfMonth" class="DayOfMonth">
        <param name="x">136</param>
        <param name="y">200</param>
    </drawable>

    <drawable id="alarms" class="Alarms">
        <param name="x">136</param>
        <param name="y">26</param>
    </drawable>

    <drawable id="battery" class="Battery">
        <param name="x">100</param>
        <param name="y">30</param>
        <param name="width">22</param>
        <param name="height">10</param>
    </drawable>

</layout>
